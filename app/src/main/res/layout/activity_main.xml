<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/activity_margin_horizontal"
    android:paddingEnd="@dimen/activity_margin_horizontal"
    android:paddingTop="@dimen/activity_margin_vertical"
    android:paddingBottom="@dimen/activity_margin_vertical"
    tools:context=".MainActivity"
   android:background="@drawable/irine">

    <EditText
        android:id="@+id/edt_bil1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/bilangan_pertama"
        android:inputType="numberDecimal"

        android:layout_marginBottom="@dimen/activity_margin_vertical"/>

    <EditText
        android:id="@+id/edt_bil2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/bilangan_kedua"
        android:inputType="numberDecimal"
        android:layout_marginBottom="@dimen/activity_margin_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="?attr/buttonBarStyle"
        android:layout_marginBottom="@dimen/activity_margin_vertical">

        <Button
            android:id="@+id/btn_addition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            android:textSize="20sp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/bg_button"
            style="?attr/buttonBarButtonStyle"/>
        <Button
            android:id="@+id/btn_substract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="20sp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/bg_button"
            style="?attr/buttonBarButtonStyle"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="?attr/buttonBarStyle"
        android:layout_marginBottom="@dimen/activity_margin_vertical">

        <Button
            android:id="@+id/btn_multiple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="*"
            android:textSize="20sp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/bg_button"
            style="?attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/btn_division"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="/"
            android:textSize="20sp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/bg_button"
            style="?attr/buttonBarButtonStyle"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/result"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:layout_margin="@dimen/activity_margin_vertical"/>
    <TextView
        android:id="@+id/tvuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"/>
</LinearLayout>